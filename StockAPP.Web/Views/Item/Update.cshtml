@model StockAPP.Web.Models.Items

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Update Product</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="Item_ID">Item ID:</label>
                        <input asp-for="Item_ID" type="text" class="form-control" id="Item_ID" disabled>
                        <span asp-validation-for="Item_ID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Item_Code">Item Code:</label>
                        <input asp-for="Item_Code" type="text" class="form-control" id="Item_Code" readonly>
                        <span asp-validation-for="Item_Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="FNSKU">FNSKU:</label>
                        <input asp-for="FNSKU" type="text" class="form-control" id="FNSKU" maxlength="12">
                        <span asp-validation-for="FNSKU" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="SKU">SKU:</label>
                        <input asp-for="SKU" type="text" class="form-control" id="SKU" maxlength="20">
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Name:</label>
                        <input asp-for="Name" type="text" class="form-control" id="Name" maxlength="150">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Description">Description:</label>
                        <input asp-for="Description" type="text" class="form-control" id="Description" maxlength="200">
                    </div>
                    <div class="form-check">
                        <input asp-for="Active" type="checkbox" class="form-check-input" id="Active">
                        <label class="form-check-label" for="Active">Active:</label>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-default float-right">Back to List</a>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
    <!--/.col (left) -->
</div>
<!-- /.row -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}