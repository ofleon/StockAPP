@model StockAPP.Web.Models.Items

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Product Detail</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form>
                <div class="card-body">
                    <div class="form-group">
                        <label for="Item_ID">Item ID:</label>
                        <input asp-for="Item_ID" type="text" class="form-control" id="Item_ID" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Item_Code">Item Code:</label>
                        <input asp-for="Item_Code" type="text" class="form-control" id="Item_Code" disabled>
                    </div>
                    <div class="form-group">
                        <label for="FNSKU">FNSKU:</label>
                        <input asp-for="FNSKU" type="text" class="form-control" id="FNSKU" disabled>
                    </div>
                    <div class="form-group">
                        <label for="SKU">SKU:</label>
                        <input asp-for="SKU" type="text" class="form-control" id="SKU" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Name">Name:</label>
                        <input asp-for="Name" type="text" class="form-control" id="Name" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Description">Description:</label>
                        <input asp-for="Description" type="text" class="form-control" id="Description" disabled>
                    </div>
                    <div class="form-check">
                        <input asp-for="Active" type="checkbox" class="form-check-input" id="Active" disabled>
                        <label class="form-check-label" for="Active">Active:</label>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    @Html.ActionLink("Edit", "Update", new { id = Model.Item_ID }, new { @class = "btn btn-primary" })
                    <a asp-action="Index" class="btn btn-default float-right">Back to List</a>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
    <!--/.col (left) -->
</div>
<!-- /.row -->








